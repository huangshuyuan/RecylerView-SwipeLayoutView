<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingLeft="@dimen/dp_8"
    android:paddingRight="@dimen/dp_8"
    android:id="@+id/list_linear"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">
<ImageView
    android:id="@+id/list_img"
    android:layout_width="@dimen/dp_100"
    android:layout_height="@dimen/dp_100"
    android:src="@mipmap/found_two"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美心西饼  75折"
            android:textSize="@dimen/sp_18"/>
        <TextView
            android:id="@+id/list_label"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签：面包 蛋糕 芝士"
            android:textSize="@dimen/sp_13"/>
        <RatingBar
            android:id="@+id/list_star"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="3"
            android:rating="3"
            android:stepSize="0.5"
            android:progressTint="@color/red"

            />
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/list_text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/classify_location"
            android:drawablePadding="@dimen/dp_2"
            android:text="0.9km"
            android:textSize="@dimen/sp_10"
            android:drawableRight="@mipmap/setting_arrow"/>
        </LinearLayout>
</LinearLayout>